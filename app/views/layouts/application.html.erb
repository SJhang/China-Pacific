<!DOCTYPE html>
<html>
  <head>
    <title>China Pacific</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <script type="text/javascript">
      <% if logged_in? %>
          window.currentUser =
          <%= render('api/user.json.jbuilder', user: current_user).html_safe =%>
      <% end %>
    </script>

    <script type="text/javascript">
      window.cloudinary_opts = {
        cloud_name: "<%= ENV['CLOUD_NAME'] %>",
        upload_preset: "<%= ENV['UPLOAD_PRESET'] %>"
      };
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAP_API_KEY'] %>"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="http://widget.cloudinary.com/global/all.js" type="text/javascript"></script>
    <script src="https://use.fontawesome.com/f56eb72a81.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:100,300,400,700|Roboto:100,300,400,500,700" rel="stylesheet">
  </head>

  <body>
    <%= yield %>
  </body>
</html>
